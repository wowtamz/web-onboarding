@model SoPro24Team06.ViewModels.ProcessTemplateListViewModel

<!-- Start: Banner Heading -->
<section class="py-4 py-xl-5" style="padding: 32px 0">
  <div class="container">
    <div class="text-white bg-dark border rounded border-0 p-4 p-md-5" style="
        background: linear-gradient(
            170deg,
            rgb(13, 63, 148) 0%,
            rgb(97, 130, 185) 62%,
            white 100%,
            rgb(230, 29, 71) 100%,
            rgb(245, 165, 182) 100%
          ),
          rgb(13, 63, 148);
        color: rgb(255, 255, 255);
      ">
      <h2 class="fw-bold text-white mb-3">Prozesse</h2>
      <p class="text-white mb-4" style="font-size: 20px">
        Erstellen Sie Blaupausen für Vorgänge oder wählen Sie einen bereits
        erstellten Prozess als Blaupause aus, um einen Vorgang zu kreieren.
      </p>
      <div class="my-3">
        <a class="btn btn-primary btn-lg me-2" role="button" asp-controller="ProcessTemplate" asp-action="Create"
          style="background: rgb(204, 212, 217); border-style: none">
          Prozess erstellen
        </a>
      </div>
    </div>
  </div>
</section>
<!-- End: Banner Heading -->
<div class="dropdown">
  <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button"
    style="margin-bottom: 12px">
    Sortierung&nbsp;
  </button>
  <div class="dropdown-menu"><a class="dropdown-item" href="#">Name</a></div>
</div>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Beschreibung</th>
        <th>Vertragstyp</th>
        <th>Abteilung</th>
        <th>Rollen</th>
        <th>Aufgaben</th>
        <th>Aktionen</th>
      </tr>
    </thead>
    <tbody>
      @if (Model.ProcessTemplateList.Count == 0)
      {
        <tr>
          <td colspan="7">Keine Prozesse vorhanden</td>
        </tr>
      }
      else
      {
        @foreach (var processTemplate in @Model.ProcessTemplateList)
        {
          <tr>
            <td>@processTemplate.Title</td>
            <td>@processTemplate.Description</td>
            <td>@processTemplate.ContractOfRefWorker.Label</td>
            <td>@processTemplate.DepartmentOfRefWorker.Name</td>
            <td>
              @foreach (var role in processTemplate.RolesWithAccess)
              {
                <div>@role.Name</div>
              }
            </td>
            <td>
              <a href="#" data-bs-target="#modal-1" data-bs-toggle="modal">Anzeigen</a>
            </td>
            <td class="d-flex flex-row justify-content-evenly">
              <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16"
                class="bi bi-box-arrow-up-left fs-4">
                <path fill-rule="evenodd"
                  d="M7.364 3.5a.5.5 0 0 1 .5-.5H14.5A1.5 1.5 0 0 1 16 4.5v10a1.5 1.5 0 0 1-1.5 1.5h-10A1.5 1.5 0 0 1 3 14.5V7.864a.5.5 0 1 1 1 0V14.5a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5v-10a.5.5 0 0 0-.5-.5H7.864a.5.5 0 0 1-.5-.5">
                </path>
                <path fill-rule="evenodd"
                  d="M0 .5A.5.5 0 0 1 .5 0h5a.5.5 0 0 1 0 1H1.707l8.147 8.146a.5.5 0 0 1-.708.708L1 1.707V5.5a.5.5 0 0 1-1 0z">
                </path>
              </svg><a href="ProcessTemplatesEdit.html"><i class="far fa-edit"
                  style="font-size: 20px; color: rgb(0, 0, 0)"></i></a><button class="btn-close" type="button"
                aria-label="Close"></button>
            </td>
          </tr>
        }
      }
    </tbody>
  </table>
</div>

<!-- Start: ShowAssignmentModal -->
<div class="modal fade" role="dialog" tabindex="-1" id="modal-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Aufgaben</h4>
        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p></p>
        <ul>
          <li>Laptop einrichten</li>
          <li>SSH Key erstellen</li>
          <li>Kollegen begrüßen</li>
        </ul>
      </div>
      <div class="modal-footer">
        <button class="btn btn-light" type="button" data-bs-dismiss="modal">
          Close</button><button class="btn btn-primary" type="button">Save</button>
      </div>
    </div>
  </div>
</div>
<!-- End: ShowAssignmentModal -->
