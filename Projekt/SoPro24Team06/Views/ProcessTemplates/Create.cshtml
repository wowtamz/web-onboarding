@model SoPro24Team06.ViewModels.ProcessTemplateViewModel

<form>
  <fieldset style="margin-top: 8px">
    <legend>Prozesstitel</legend>
    <input class="form-control" type="text" />
  </fieldset>
  <fieldset style="margin-top: 8px">
    <legend>Vertragstyp</legend>
    <button class="btn btn-primary" type="button" data-bs-target="#modal-1" data-bs-toggle="modal"
      style="margin-top: 0px; margin-bottom: 0px">
      Vertragstyp
    </button>
  </fieldset>
  <fieldset style="margin-top: 8px">
    <legend>Rolle</legend>
    <button class="btn btn-primary" type="button" data-bs-target="#modal-2" data-bs-toggle="modal"
      style="margin-top: 0px; margin-bottom: 0px; margin-right: 12px">
      Rolle
    </button>
  </fieldset>
  <fieldset style="margin-top: 8px">
    <legend>Abteilung</legend>
    <button class="btn btn-primary" type="button" data-bs-target="#modal-1" data-bs-toggle="modal"
      style="margin-top: 0px; margin-bottom: 0px">
      Abteilung
    </button>
  </fieldset>
  <fieldset style="margin-top: 8px">
    <legend>Beschreibung</legend>
    <textarea class="form-control"></textarea>
  </fieldset>
  <fieldset style="margin-top: 8px">
    <legend>
      Aufgaben
      <button class="btn btn-primary" type="button" style="margin-left: 16px" data-bs-target="#modal-1"
        data-bs-toggle="modal">
        Aufgaben hinzufügen
      </button>
    </legend>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Titel</th>
            <th>Anleitung</th>
            <th>Aufgabenzuständiger</th>
            <th>Vertragsart</th>
            <th>Abteilung</th>
            <th>Aktionen</th>
          </tr>
        </thead>
        <tbody>
          @if (Model.AssignmentTemplates.Count == 0)
          {
            <tr>
              <td colspan="8">Keine Aufgaben vorhanden</td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </fieldset>
  <button class="btn btn-primary" type="submit" style="margin-top: 12px">
    Erstellen
  </button>
</form>
<!-- Start: AufgabenModal -->
<div class="modal fade visible" role="dialog" tabindex="-1" id="modal-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Füge weitere Aufgaben hinzu</h4>
        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Aufgabentitel</th>
                <th>Aktion</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>SSH Key erstellen</td>
                <td class="text-center">
                  <svg></svg>
                </td>
              </tr>
              <tr>
                <td>Laptop einrichten</td>
                <td class="text-center">
                  <svg></svg>
                </td>
              </tr>
              <tr>
                <td>Vertrag abschließen</td>
                <td class="text-center">
                  <svg></svg>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-light" type="button" data-bs-dismiss="modal">
          Zurück
        </button>
        <button class="btn btn-primary" type="button">Speichern</button>
      </div>
    </div>
  </div>
</div>
<!-- End: AufgabenModal -->
<!-- Start: RollenModal -->
<div class="modal fade visible" role="dialog" tabindex="-1" id="modal-2">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Füge weitere Rollen hinzu</h4>
        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Rolle</th>
                <th>Aktion</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Developer</td>
                <td class="text-center">
                  <svg></svg>
                </td>
              </tr>
              <tr>
                <td>Personaler</td>
                <td class="text-center">
                  <svg></svg>
                </td>
              </tr>
              <tr>
                <td>Externer</td>
                <td class="text-center">
                  <svg></svg>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-light" type="button" data-bs-dismiss="modal">
          Zurück
        </button>
        <button class="btn btn-primary" type="button">Speichern</button>
      </div>
    </div>
  </div>
</div>
<!-- End: RollenModal -->
