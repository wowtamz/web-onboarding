@model SoPro24Team06.ViewModels.AssigmentTemplateListViewModel

<!-- Start: Banner Heading -->
<section class="py-4 py-xl-5" style="padding: 32px 0;">
    <div class="container">
        <div class="text-white bg-dark border rounded border-0 p-4 p-md-5"
            style="background: linear-gradient(170deg, rgb(32, 48, 76) 0%, rgb(97,130,185) 62%, white 100%, rgb(230, 29, 71) 100%, rgb(245,165,182) 100%), rgb(13, 63, 148);color: rgb(255, 255, 255);">
            <h2 class="fw-bold text-white mb-3">Aufgaben</h2>
            <p class="text-white mb-4" style="font-size: 20px;">Erstellen Sie Aufgaben, die Sie Prozessen oder auch
                Vorgängen zuweisen können.
            </p>
            <div class="my-3">
                <a class="btn btn-primary btn-lg me-2" role="button" asp-action="Create"
                    asp-controller="AssignmentTemplate" style="background: var(--silver);border-style: none;">
                    Aufgabe erstellen
                </a>
            </div>
        </div>
    </div>
</section>
<!-- End: Banner Heading -->
<div class="d-flex justify-content-between align-items-xxl-center">
    <div class="btn-toolbar">
        <div class="btn-group" role="group"><button class="btn btn-primary" type="button">Meine Aufgaben</button>
            <button class="btn btn-primary" type="button">Offene Aufgaben</button>
            <button class="btn btn-primary" type="button">Aufgabenvorlagen</button>
        </div>
    </div>
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button"
            style="margin-bottom: 12px;">Sortierung&nbsp;
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item">Alle</a>
            <a class="dropdown-item">Name</a>
            <a class="dropdown-item">Fälligkeiten</a>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Anleitung</th>
                <th>Aufgabenzuständiger</th>
                <th>Vertragsart</th>
                <th>Abteilung</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AssignmentTemplateList.Count == 0)
            {
                <tr>
                    <td colspan="8">Keine Aufgaben vorhanden</td>
                </tr>
            }
            else
            {

                @foreach (var assignment in Model.AssignmentTemplateList)
                {
                    <tr>
                        <td>@assignment.Title</td>
                        <td>>Mehr anzeigen</td>
                        <td>
                            @foreach (var contract in assignment.ForContractsList)
                            {
                                <div>@contract.Label</div>
                            }
                        </td>
                        <td>
                            @foreach (var department in assignment.ForDepartmentsList)
                            {
                                <div>@department.Name</div>
                            }
                        </td>
                        <td>
                            @foreach (var role in assignment.AssignedRolesList)
                            {
                                <div>@role.Name</div>
                            }
                        </td>
                        <td>@assignment.DueIn</td>
                        <td></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>